{
    "name": "co0lsky/laravel-permission-loader",
    "type": "library",
    "description": "Store permissions into database",
    "keywords": [
        "co0lsky",
        "laravel-permission-loader"
    ],
    "homepage": "https://github.com/co0lsky/laravel-permission-loader",
    "license": "MIT",
    "authors": [
        {
            "name": "Sky Chin",
            "email": "sky4just@gmail.com",
            "homepage": "https://github.com/co0lsky",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "co0lsky\\laravel-permission-loader\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "co0lsky\\laravel-permission-loader\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
